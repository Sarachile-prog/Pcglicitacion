
{
  "entities": {
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a classification or industry for bid opportunities.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "name", "description"]
    },
    "Bid": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Bid",
      "type": "object",
      "description": "A single tender opportunity scraped from web sources.",
      "properties": {
        "id": { "type": "string", "description": "Licitaciones/Listado/Licitacion/CodigoExterno" },
        "title": { "type": "string", "description": "Licitaciones/Listado/Licitacion/Nombre" },
        "entity": { "type": "string", "description": "Licitaciones/Listado/Licitacion/Comprador/NombreOrganismo" },
        "description": { "type": "string" },
        "status": { "type": "string" },
        "amount": { "type": "number" },
        "currency": { "type": "string" },
        "typeCode": { "type": "number" },
        "deadlineDate": { "type": "string", "format": "date-time" },
        "aiAnalysis": { "type": "object" },
        "scrapedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "status"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Extended user information including roles and multi-tenancy links.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["User", "Admin", "SuperAdmin"] },
        "companyId": { "type": "string" },
        "requestedCompanyName": { "type": "string" },
        "planRequested": { "type": "boolean" },
        "status": { "type": "string", "enum": ["Active", "Suspended"] },
        "termsAccepted": { "type": "boolean" },
        "demoUsageCount": { "type": "number" }
      },
      "required": ["uid", "role"]
    },
    "SupportTicket": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SupportTicket",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "userEmail": { "type": "string" },
        "subject": { "type": "string" },
        "status": { "type": "string", "enum": ["Open", "InProgress", "Closed"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "lastMessage": { "type": "string" }
      },
      "required": ["userId", "subject", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User profiles and permissions."
        }
      },
      {
        "path": "/support_tickets/{ticketId}",
        "definition": {
          "entityName": "SupportTicket",
          "schema": { "$ref": "#/backend/entities/SupportTicket" },
          "description": "SaaS support ticketing system."
        }
      },
      {
        "path": "/support_tickets/{ticketId}/messages/{messageId}",
        "definition": {
          "entityName": "SupportMessage",
          "schema": {
            "type": "object",
            "properties": {
              "senderId": { "type": "string" },
              "senderEmail": { "type": "string" },
              "senderRole": { "type": "string" },
              "text": { "type": "string" },
              "createdAt": { "type": "string", "format": "date-time" }
            }
          },
          "description": "Conversation history within a ticket."
        }
      }
    ]
  }
}
