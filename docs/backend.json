
{
  "entities": {
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a classification or industry for bid opportunities.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "name", "description"]
    },
    "Bid": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Bid",
      "type": "object",
      "description": "A single tender opportunity enriched with AI analysis and tracking data.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "entity": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string" },
        "amount": { "type": "number" },
        "currency": { "type": "string" },
        "items": { "type": "array" },
        "aiAnalysis": { "type": "object" },
        "scrapedAt": { "type": "string", "format": "date-time" },
        "fullDetailAt": { "type": "string", "format": "date-time" },
        "isOcds": { "type": "boolean" }
      },
      "required": ["id", "title", "status"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Extended user information including roles, demo usage and terms acceptance.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["User", "Admin", "SuperAdmin"] },
        "companyId": { "type": "string" },
        "requestedCompanyName": { "type": "string" },
        "planRequested": { "type": "boolean" },
        "status": { "type": "string", "enum": ["Active", "Suspended"] },
        "termsAccepted": { "type": "boolean" },
        "demoUsageCount": { "type": "number" },
        "lastLoginAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "role"]
    },
    "Bookmark": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Bookmark",
      "type": "object",
      "description": "A bid being managed by a company team with digital folder and audits.",
      "properties": {
        "bidId": { "type": "string" },
        "preparationStatus": { "type": "string" },
        "annexes": { "type": "array" },
        "savedAt": { "type": "string", "format": "date-time" }
      }
    },
    "SupportTicket": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SupportTicket",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "userEmail": { "type": "string" },
        "subject": { "type": "string" },
        "status": { "type": "string", "enum": ["Open", "InProgress", "Closed"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "lastMessage": { "type": "string" }
      },
      "required": ["userId", "subject", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User profiles and permissions."
        }
      },
      {
        "path": "/bids/{bidId}",
        "definition": {
          "entityName": "Bid",
          "schema": { "$ref": "#/backend/entities/Bid" },
          "description": "Global repository of enriched bids."
        }
      },
      {
        "path": "/companies/{companyId}/bookmarks/{bidId}",
        "definition": {
          "entityName": "Bookmark",
          "schema": { "$ref": "#/backend/entities/Bookmark" },
          "description": "Collaborative project management per bid."
        }
      },
      {
        "path": "/support_tickets/{ticketId}",
        "definition": {
          "entityName": "SupportTicket",
          "schema": { "$ref": "#/backend/entities/SupportTicket" },
          "description": "SaaS support ticketing system."
        }
      }
    ]
  }
}
