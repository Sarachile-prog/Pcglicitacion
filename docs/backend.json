
{
  "entities": {
    "Bid": {
      "title": "Bid",
      "description": "Una licitación pública sincronizada desde Mercado Público.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "entity": { "type": "string" },
        "status": { "type": "string" },
        "amount": { "type": "number" },
        "currency": { "type": "string" },
        "deadlineDate": { "type": "string", "format": "date-time" },
        "scrapedAt": { "type": "string", "format": "date-time" },
        "sourceUrl": { "type": "string", "format": "uri" },
        "aiAnalysis": { "type": "object" }
      },
      "required": ["id", "title"]
    },
    "Company": {
      "title": "Company",
      "description": "Cuenta de empresa que arrienda la plataforma.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "rut": { "type": "string" },
        "plan": { "type": "string", "enum": ["Standard", "Enterprise"] },
        "maxUsers": { "type": "number", "default": 2 },
        "subscriptionStatus": { "type": "string", "enum": ["Active", "Inactive", "Trial"] },
        "ufPriceBase": { "type": "number", "default": 1.5 },
        "ufPriceExtraUser": { "type": "number", "default": 0.5 }
      },
      "required": ["id", "name", "plan"]
    },
    "Bookmark": {
      "title": "Bookmark",
      "description": "Licitación seguida y gestionada por una empresa.",
      "type": "object",
      "properties": {
        "bidId": { "type": "string" },
        "title": { "type": "string" },
        "entity": { "type": "string" },
        "status": { "type": "string" },
        "preparationStatus": { "type": "string" },
        "savedAt": { "type": "string", "format": "date-time" },
        "timeline": { "type": "array" },
        "annexes": { "type": "array" },
        "aiAnalysis": { "type": "object" }
      },
      "required": ["bidId", "title"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "Datos del usuario y su vinculación corporativa.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "companyId": { "type": "string" },
        "role": { "type": "string", "enum": ["Admin", "User", "SuperAdmin"] }
      },
      "required": ["uid", "companyId", "role"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "bids/{bidId}": {
      "schema": { "$ref": "#/backend/entities/Bid" },
      "description": "Base de datos global de licitaciones sincronizadas."
    },
    "companies/{companyId}": {
      "schema": { "$ref": "#/backend/entities/Company" },
      "description": "Datos maestros de la empresa cliente."
    },
    "companies/{companyId}/bookmarks/{bidId}": {
      "schema": { "$ref": "#/backend/entities/Bookmark" },
      "description": "Cartera de licitaciones compartida por el equipo de la empresa."
    },
    "users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "Perfiles y roles de acceso."
    },
    "settings/{settingId}": {
      "schema": "object",
      "description": "Configuraciones globales del sistema (Admin solamente)."
    }
  }
}
