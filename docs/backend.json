
{
  "entities": {
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a classification or industry for bid opportunities.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "name", "description"]
    },
    "AwardingBody": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AwardingBody",
      "type": "object",
      "description": "Government or institutional entity issuing a bid.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "country": { "type": "string" }
      },
      "required": ["id", "name", "country"]
    },
    "Bid": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Bid",
      "type": "object",
      "description": "A single tender opportunity scraped from web sources.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string" },
        "amount": { "type": "number" },
        "currency": { "type": "string" },
        "deadlineDate": { "type": "string", "format": "date-time" },
        "aiAnalysis": { "type": "object" }
      },
      "required": ["id", "title", "status"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Extended user information including roles and multi-tenancy links.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["User", "Admin", "SuperAdmin"] },
        "companyId": { "type": "string", "description": "Link to the Company entity." },
        "status": { "type": "string", "enum": ["Active", "Suspended"] },
        "termsAccepted": { "type": "boolean" },
        "aiUsageCount": { "type": "number" },
        "aiCredits": { "type": "number", "description": "Available credits for deep analysis." }
      },
      "required": ["uid", "role"]
    },
    "Company": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Company",
      "type": "object",
      "description": "A corporate tenant in the SaaS ecosystem.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "rut": { "type": "string" },
        "plan": { "type": "string", "enum": ["Standard", "Enterprise"] },
        "subscriptionStatus": { "type": "string", "enum": ["Active", "Inactive"] },
        "maxUsers": { "type": "number" }
      },
      "required": ["id", "name", "plan", "subscriptionStatus"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User profiles and permissions."
        }
      },
      {
        "path": "/companies/{companyId}",
        "definition": {
          "entityName": "Company",
          "schema": { "$ref": "#/backend/entities/Company" },
          "description": "Corporate tenant root."
        }
      },
      {
        "path": "/companies/{companyId}/bookmarks/{bidId}",
        "definition": {
          "entityName": "Bid",
          "schema": { "$ref": "#/backend/entities/Bid" },
          "description": "Bids followed and managed by a specific company team."
        }
      },
      {
        "path": "/bids/{bidId}",
        "definition": {
          "entityName": "Bid",
          "schema": { "$ref": "#/backend/entities/Bid" },
          "description": "Global cache of scraped bids."
        }
      },
      {
        "path": "/settings/{settingId}",
        "definition": {
          "entityName": "SystemConfig",
          "schema": { "type": "object" },
          "description": "System-wide settings like API keys."
        }
      }
    ],
    "reasoning": "The structure uses a hierarchical multi-tenant approach. /users holds the mapping between individuals and corporate accounts. /companies isolates team-specific collaboration data, ensuring data privacy between different firms using the SaaS."
  }
}
