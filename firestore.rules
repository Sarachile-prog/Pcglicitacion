
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid));
    }

    // Configuración del sistema (Lectura pública, escritura para cualquier usuario autenticado en el prototipo)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Licitaciones y Categorías: Lectura pública, escritura protegida
    match /bids/{bidId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Cache de sincronización: Público para ver estado, protegido para escribir
    match /mp_cache/{cacheId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Datos sensibles de Outreach: Solo para Administradores reales
    match /companies/{companyId} {
      allow read, write: if isAdmin();
      
      match /contactEmails/{emailId} {
        allow read, write: if isAdmin();
      }
    }

    match /admin_roles/{uid} {
      allow get: if isSignedIn() && request.auth.uid == uid;
      allow list: if false;
      allow create, update, delete: if false;
    }
  }
}
