
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Funciones de ayuda
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && (
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin') ||
        request.auth.token.email == 'control@pcgoperacion.com'
      );
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function belongsToCompany(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    // --- REGLAS DE COLECCIÓN ---

    // Licitaciones Globales: Lectura pública, Escritura restringida
    match /bids/{bidId} {
      allow read: if true;
      allow write: if isSignedIn(); // Permite a usuarios identificados actualizar análisis IA
    }

    // Empresas: Solo usuarios de la misma empresa o SuperAdmin
    match /companies/{companyId} {
      allow read: if belongsToCompany(companyId) || isSuperAdmin();
      allow write: if isSuperAdmin() || (belongsToCompany(companyId) && getUserData().role == 'Admin');
      
      // Bookmarks: Compartidos entre todo el equipo de la empresa
      match /bookmarks/{bidId} {
        allow read, write: if belongsToCompany(companyId) || isSuperAdmin();
      }
    }

    // Usuarios: Lectura propia o SuperAdmin. 
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }

    // Configuraciones: Solo SuperAdmin
    match /settings/{settingId} {
      allow read, write: if isSuperAdmin();
    }

    // Cache de Mercado Público: Lectura pública
    match /mp_cache/{cacheId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
