rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Validaci칩n por email maestro pura (sin consulta a DB para evitar loops)
    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'control@pcgoperacion.com' ||
        request.auth.token.email == 'pcordova@woken.cl'
      );
    }

    // Validaci칩n de rol leyendo el documento del usuario
    // Solo se llama desde colecciones que NO sean /users para evitar recursividad
    function hasAdminRole() {
      return isSignedIn() && (
        isMasterAdmin() || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'SuperAdmin']
      );
    }

    match /users/{userId} {
      // Un usuario siempre puede leer y editar su propio perfil
      allow get, update: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Solo el administrador maestro puede listar todos los usuarios
      allow list: if isMasterAdmin();
    }

    match /support_tickets/{ticketId} {
      allow create: if isSignedIn();
      
      // Permitir lectura si es due침o o admin
      allow get: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.userId == request.auth.uid ||
        hasAdminRole()
      );

      // Regla de listado para usuarios (debe incluir el filtro userId en la query)
      allow list: if isSignedIn() && (
        isMasterAdmin() || 
        hasAdminRole() ||
        request.query.limit <= 100 // Seguridad b치sica
      );
      
      allow update: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.userId == request.auth.uid ||
        hasAdminRole()
      );

      match /messages/{messageId} {
        allow read, create: if isSignedIn();
      }
    }

    match /bids/{bidId} {
      allow read: if true;
      allow write: if isMasterAdmin() || hasAdminRole();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }
    
    match /companies/{companyId} {
      allow read, write: if isSignedIn();
      match /bookmarks/{bidId} {
        allow read, write: if isSignedIn();
      }
    }

    match /mp_cache/{cacheId} {
      allow read, write: if isMasterAdmin();
    }
  }
}