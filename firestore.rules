rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Licitaciones Globales Security Rules
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admin_roles/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function itemExists() {
      return resource != null;
    }

    // --- COLLECTION RULES ---

    /**
     * @description Cache for Mercado PÃºblico API responses.
     * @path /mp_cache/{cacheId}
     * @principle Technical cache for rate limiting. 
     * Restricted to authenticated users to prevent public abuse.
     */
    match /mp_cache/{cacheId} {
      allow read, write: if isSignedIn();
    }

    match /bids/{bidId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update, delete: if isAdmin() && itemExists();
    }

    match /categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update, delete: if isAdmin() && itemExists();
    }

    match /companies/{companyId} {
      allow get, list: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if isAdmin() && itemExists();

      match /contactEmails/{contactEmailId} {
        allow get, list: if isAdmin();
        allow create: if isAdmin() && request.resource.data.companyId == companyId;
        allow update, delete: if isAdmin() && itemExists();
      }
    }

    match /admin_roles/{uid} {
      allow get: if isOwner(uid);
      allow list: if false;
      allow create, update, delete: if false;
    }
  }
}