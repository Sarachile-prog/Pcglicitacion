rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Validación por email maestro pura (sin DB)
    function isMasterAdmin() {
      return isSignedIn() && request.auth.token.email == 'control@pcgoperacion.com';
    }

    // Validación de rol robusta
    function hasAdminRole() {
      return isSignedIn() && (
        isMasterAdmin() || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'SuperAdmin'])
      );
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
      allow list: if isMasterAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
    }

    match /support_tickets/{ticketId} {
      allow create: if isSignedIn();
      
      allow get: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.userId == request.auth.uid ||
        hasAdminRole()
      );

      // Regla de listado basada en filtros para evitar errores de permisos masivos
      allow list: if isSignedIn() && (
        isMasterAdmin() || 
        hasAdminRole() ||
        request.query.filters.userId == request.auth.uid
      );
      
      allow update: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.userId == request.auth.uid ||
        hasAdminRole()
      );

      match /messages/{messageId} {
        allow read, create: if isSignedIn();
      }
    }

    match /bids/{bidId} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }
    
    match /companies/{companyId} {
      allow read, write: if isSignedIn();
      match /bookmarks/{bidId} {
        allow read, write: if isSignedIn();
      }
    }

    match /mp_cache/{cacheId} {
      allow read, write: if isMasterAdmin();
    }
  }
}