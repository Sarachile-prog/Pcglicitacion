rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Validación ultra-rápida por email maestro
    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'control@pcgoperacion.com' ||
        request.auth.token.email == 'pcordova@woken.cl'
      );
    }

    // Validación por rol en documento (evitando recursividad innecesaria)
    function hasAdminRole() {
      return isSignedIn() && (
        isMasterAdmin() ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'SuperAdmin'])
      );
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
      allow list: if isMasterAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
    }

    match /support_tickets/{ticketId} {
      // Un usuario puede crear tickets
      allow create: if isSignedIn();
      
      // Regla de lectura unificada (GET y LIST)
      // Permite si es Admin o si el documento le pertenece
      allow read: if isSignedIn() && (
        isMasterAdmin() || 
        (resource != null && resource.data.userId == request.auth.uid) ||
        hasAdminRole()
      );
      
      allow update: if isSignedIn() && (
        isMasterAdmin() || 
        (resource != null && resource.data.userId == request.auth.uid) ||
        hasAdminRole()
      );

      match /messages/{messageId} {
        allow read, create: if isSignedIn();
      }
    }

    match /bids/{bidId} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }
    
    match /companies/{companyId} {
      allow read, write: if isSignedIn();
      match /bookmarks/{bidId} {
        allow read, write: if isSignedIn();
      }
    }

    match /mp_cache/{cacheId} {
      allow read, write: if isMasterAdmin();
    }
  }
}