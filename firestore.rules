
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Funciones de ayuda
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin';
    }

    function belongsToCompany(companyId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    // --- REGLAS DE COLECCIÓN ---

    // Licitaciones Globales: Lectura pública, Escritura restringida a Admin/System
    match /bids/{bidId} {
      allow read: if true;
      allow write: if isSignedIn(); // Temporalmente abierto para que el cliente pueda actualizar detalles IA
    }

    // Empresas: Solo usuarios de la misma empresa o SuperAdmin
    match /companies/{companyId} {
      allow read: if belongsToCompany(companyId) || isSuperAdmin();
      allow write: if isSuperAdmin();
      
      // Bookmarks: Compartidos entre todos los usuarios de la empresa
      match /bookmarks/{bidId} {
        allow read, write: if belongsToCompany(companyId) || isSuperAdmin();
      }
    }

    // Usuarios: Lectura propia o SuperAdmin. 
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }

    // Configuraciones: Solo SuperAdmin
    match /settings/{settingId} {
      allow read, write: if isSuperAdmin();
    }

    // Cache de Mercado Público: Lectura pública, Escritura por sistema
    match /mp_cache/{cacheId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
