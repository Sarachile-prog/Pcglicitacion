
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'control@pcgoperacion.com' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SuperAdmin')
      );
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }

    match /companies/{companyId} {
      allow read, write: if isSuperAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId);
      
      match /bookmarks/{bidId} {
        allow read, write: if isSuperAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId);
      }
    }

    match /support_tickets/{ticketId} {
      // Permitir crear tickets a cualquier usuario logueado
      allow create: if isSignedIn();
      
      // Permitir listar tickets si es admin o si el filtro de la consulta es su propio UID
      allow list: if isSignedIn() && (isSuperAdmin() || resource.data.userId == request.auth.uid);
      
      // Permitir leer un ticket espec√≠fico si le pertenece o es admin
      allow get: if isSignedIn() && (isSuperAdmin() || resource.data.userId == request.auth.uid);
      
      // Permitir actualizar (responder o cerrar) si le pertenece o es admin
      allow update: if isSignedIn() && (isSuperAdmin() || resource.data.userId == request.auth.uid);

      match /messages/{messageId} {
        allow read: if isSignedIn() && (isSuperAdmin() || get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId == request.auth.uid);
        allow create: if isSignedIn() && (isSuperAdmin() || get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId == request.auth.uid);
      }
    }

    match /bids/{bidId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /mp_cache/{cacheId} {
      allow read, write: if isSuperAdmin();
    }
  }
}
