rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Validaci贸n por email maestro sin recursividad
    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'control@pcgoperacion.com' ||
        request.auth.token.email == 'pcordova@woken.cl'
      );
    }

    // Validaci贸n de rol evitando bucles de lectura
    function hasAdminRole() {
      return isSignedIn() && (
        isMasterAdmin() || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'SuperAdmin'])
      );
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
      allow list: if isMasterAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isMasterAdmin());
    }

    match /support_tickets/{ticketId} {
      // Regla de creaci贸n: Cualquier logueado puede pedir ayuda
      allow create: if isSignedIn();
      
      // Regla de lectura individual (GET)
      allow get: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.userId == request.auth.uid ||
        hasAdminRole()
      );

      // Regla de listado (LIST): Vital para que la consulta de 'Mis Tickets' no falle
      allow list: if isSignedIn() && (
        isMasterAdmin() || 
        (request.query.limit <= 100 && request.auth.uid != null) // El filtro por userId en el c贸digo hace el resto
      );
      
      allow update: if isSignedIn() && (
        isMasterAdmin() || 
        resource.data.userId == request.auth.uid ||
        hasAdminRole()
      );

      match /messages/{messageId} {
        allow read, create: if isSignedIn();
      }
    }

    match /bids/{bidId} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }
    
    match /companies/{companyId} {
      allow read, write: if isSignedIn();
      match /bookmarks/{bidId} {
        allow read, write: if isSignedIn();
      }
    }

    match /mp_cache/{cacheId} {
      allow read, write: if isMasterAdmin();
    }
  }
}